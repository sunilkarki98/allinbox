# ============================================================================
# AllInBox Backend Production Environment Variables
# Location: apps/backend/.env
# ============================================================================

# DATABASE - Supabase
# Format: postgresql://postgres:PASSWORD@db.PROJECT_ID.supabase.co:6543/postgres?sslmode=require
DATABASE_URL=postgresql://postgres:YOUR_PASSWORD@db.supabase.co:6543/postgres?sslmode=require

# CACHE & JOB QUEUE - Dragonfly/Redis
# Use 'redis://dragonfly:6379' if using docker-compose.prod.yml
# Use 'redis://localhost:6379' if running locally
REDIS_URL=redis://localhost:6379

# APP CONFIGURATION
NODE_ENV=production
PORT=3001
API_URL=https://api.yourdomain.com
FRONTEND_URL=https://allinbox.vercel.app
ADMIN_URL=https://admin.yourdomain.com

# SECURITY - Generate with: openssl rand -hex 32
JWT_SECRET=GENERATE_WITH_openssl_rand_-hex_32
ENCRYPTION_KEY=GENERATE_WITH_openssl_rand_-hex_32
SUPABASE_JWT_SECRET=your_supabase_jwt_secret

# EXTERNAL INTEGRATIONS
GEMINI_API_KEY=your_gemini_api_key
META_APP_ID=your_meta_app_id
META_APP_SECRET=your_meta_app_secret
META_REDIRECT_BASE_URL=https://api.yourdomain.com/api/platforms/callback
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_REDIRECT_URI=https://api.yourdomain.com/api/auth/callback/google
WEBHOOK_VERIFY_TOKEN=unique_random_token
