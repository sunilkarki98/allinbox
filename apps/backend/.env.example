# ALLINBOX Backend Environment Configuration
# Copy this file to .env and fill in your values
# NEVER commit .env files with real values

# Server
PORT=4000
NODE_ENV=development

# Database (use a strong random password in production)
DATABASE_URL="postgresql://user:CHANGE_ME_STRONG_PASSWORD@localhost:5433/unified_inbox"

# DragonflyDB (Redis-compatible)
REDIS_URL="redis://localhost:6379"

# Authentication (generate with: openssl rand -base64 48)
JWT_SECRET="CHANGE_ME_TO_RANDOM_64_CHAR_STRING"

# AI Service
GEMINI_API_KEY="your_gemini_api_key_here"

# Meta/Instagram Webhooks (for signature verification)
META_APP_SECRET="your_meta_app_secret_here"
WEBHOOK_VERIFY_TOKEN="your_custom_verify_token_here"

# Social Platform Credentials
TIKTOK_CLIENT_KEY=""
TIKTOK_CLIENT_SECRET=""
INSTAGRAM_CLIENT_ID=""
INSTAGRAM_CLIENT_SECRET=""

# Frontend URL (for CORS)
FRONTEND_URL="http://localhost:3000"
